<%= form_with(model: found_item, local: true, html: { multipart: true }) do |form| %>
  <% if found_item.errors.any? %>
    <div style="color: red; margin-bottom: 1rem;">
      <h4><%= pluralize(found_item.errors.count, "error") %> prevented this item from being saved:</h4>
      <ul>
        <% found_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :category %><br>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :found_date %><br>
    <%= form.date_field :found_date %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit "Save Found Item" %>
  </div>
<% end %>