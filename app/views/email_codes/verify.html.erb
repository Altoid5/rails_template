<!-- Full Page Styling -->
<div style="background-color: #4a464d; min-height: 100vh; font-family: Arial, sans-serif;">
  <!-- Top Orange Border -->
  <div style="height: 5px; background-color: #f57c00;"></div>

  <!-- Centered Verification Box -->
  <div style="max-width: 480px; margin: 4rem auto; background: #f2f2f2; padding: 2.5rem; border-radius: 10px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);">

    <!-- Site Title -->
    <h1 style="text-align: center; color: #f57c00; font-weight: bold; margin-bottom: 2rem;">UTRGV Lost & Found</h1>

    <!-- Flash Messages INSIDE the box -->
    <% if flash[:notice] %>
      <div style="background-color: #e8f5e9; color: #2e7d32; border-left: 6px solid #66bb6a; padding: 1rem; margin-bottom: 1.5rem; border-radius: 6px;">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div style="background-color: #ffebee; color: #c62828; border-left: 6px solid #ef5350; padding: 1rem; margin-bottom: 1.5rem; border-radius: 6px;">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Heading -->
    <h2 style="text-align: center; color: #222; margin-bottom: 1rem;">Verify Your UTRGV Email</h2>
    <p style="text-align: center; color: #555; margin-bottom: 2rem;">
      We sent a verification code to your UTRGV email.
    </p>

    <!-- Form -->
    <%= form_with url: verify_code_path, method: :post, local: true do %>
      <%= hidden_field_tag :email, params[:email] %>

      <div style="margin-bottom: 1.5rem;">
        <%= label_tag :code, "Verification Code", style: "display: block; font-weight: bold; margin-bottom: 0.5rem;" %>
        <%= text_field_tag :code, nil, required: true, placeholder: "Enter your code", style: "width: 100%; padding: 0.75rem; border: 1px solid #ccc; border-radius: 6px;" %>
      </div>

      <%= submit_tag "Verify and Login", style: "width: 100%; background-color: #f57c00; color: white; padding: 0.75rem; border: none; border-radius: 6px; font-weight: bold; font-size: 1rem; cursor: pointer;" %>
    <% end %>

    <!-- Back Link -->
    <div style="margin-top: 1.5rem; text-align: center;">
      <%= link_to "← Back to Login", email_login_path, style: "color: #f57c00; font-weight: bold; text-decoration: none;" %>
    </div>
  </div>
</div>
